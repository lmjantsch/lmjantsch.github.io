---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'post'>['data'];

const { title, description, date, updatedDate } = Astro.props;
---

<BaseLayout title={title} description={description}>
    <main class="max-w-6xl mx-auto py-8 px-4">
        <article class="prose prose-lg dark:prose-invert mx-auto">
            <div class="text-center mb-8">
                <p class="text-base text-secondary dark:text-secondary_dark">
                    <FormattedDate date={date} />
                </p>
                <h1 class="text-4xl font-bold text-primary dark:text-primary_dark mb-2">{title}</h1>
                {updatedDate && (
                    <p class="text-sm text-secondary dark:text-secondary_dark italic">
                        Last updated on <FormattedDate date={updatedDate} />
                    </p>
                )}
            </div>
            
            <slot />
        </article>
    </main>
    <Footer />
</BaseLayout>